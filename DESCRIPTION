Package: fixes
Type: Package
Title: Tools for Creating and Visualizing Fixed-Effects Event Study Models
Version: 0.1.0
Authors@R: c(
    person(
      "Yosuke", "Abe",
      email = "yosuke.abe0507@gmail.com",
      role = c("aut", "cre")
    )
